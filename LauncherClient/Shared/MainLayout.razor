@inherits LayoutComponentBase
<MudThemeProvider Theme="@MyCustomTheme"/>
<MudDialogProvider />
<MudSnackbarProvider />
<MudLayout>
    <MudDrawer @bind-Open="@open" Class="align-self-end" Fixed="true" Elevation="1" Variant="@DrawerVariant.Mini" OpenMiniOnHover="true">
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="pt-6 px-16">
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
@code {
    bool open = false;

    void ToggleDrawer()
    {
        open = !open;
    }
    MudTheme MyCustomTheme = new MudTheme()
        {
            Typography = new Typography()
            {
                Default = new Default()
                {
                    FontFamily = new[] { "Montserrat" }
                }
            }
        };
}